	        urgent_workspace   #2f343a #900000 #ffffff
	        binding_mode       #2f343a #900000 #ffffff
		
	}
	font pango:DejaVu Sans, Icons 11
	separator_symbol " "
        status_command $HOME/.conky-i3bar.sh
}
